<div class="container-fluid bg-image-fundings">
  <div class="row">

    <div class="col-12 col-md-5 col-lg-6">
    </div>

    <div class="col-12 col-md-5 col-lg-4 justify-content-center">
      <div class="funding-list">

        <h1>My fundings</h1>

        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Project</th>
              <th scope="col">Contribution</th>
            </tr>
          </thead>
          <tbody>
            <% @fundings.each_with_index do |funding, index| %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= link_to funding.project.name, project_path(funding.project) %></td>
              <td><%= funding.funding_amount %> â‚¬</td>
            </tr>
            <% end %>
          </tbody>
        </table>

          <div class="one-line">
            <span>
              <%= link_to "All projects", projects_path, class: "btn btn-primary" %>
            </span>
            <span class="dose-description-text">
              <%= link_to "My bookmarks", bookmarks_path, class: "btn btn-primary" %>
            </span>
          </div>

      </div>

    <div class="col-12 col-md-2 col-lg-2">
    </div>

  </div>
</div>
