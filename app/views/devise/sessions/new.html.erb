<div class="container-fluid bg-new-user p-0">
  <%= render 'shared/navbar' %>
  <div class="wrapper-m"></div>
  <div class="row justify-content-center">
    <div class="col-12 col-md-5 mb-5" style="background-color: #f4f4f4;">

      <h2 style="margin: 24px auto; text-align: center;">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs px-3">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions buttons-one-line px-3">
          <%= f.button :submit, "Log in", class: 'btn btn-primary mb-4' %>
          <%= link_to "Back", :back, class: 'btn btn-primary mb-4' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
