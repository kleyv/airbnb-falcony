<div class="container-fluid bg-new-user p-0" id="content-wrap">
  <%= render 'shared/navbar' %>
  <div class="wrapper-m"></div>
  <div class="row justify-content-center">
    <div class="col-12 col-md-5 mb-5" style="background-color: white;">

      <h2 style="margin: 24px; text-align: center;">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs px-3">
          <div class="buttons-one-line">
            <%= f.input :first_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "" }%>
            <%= f.input :last_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "" }%>
          </div>
          <div class="buttons-one-line">
            <%= f.input :username,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "" }%>
            <%= f.input :role,
                        required: true,
                        autofocus: true,
                        collection: ["owner", "investor"] %>
          </div>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions buttons-one-line px-3">
          <%= f.button :submit, "Sign up", class: 'btn btn-primary mb-4' %>
          <%= link_to "Back", :back, class: 'btn btn-primary mb-4' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
