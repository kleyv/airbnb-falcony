<div class="container-fluid bg-image-project">

  <div class="row">

    <div class="col-12 col-md-5 col-lg-7">
    </div>

    <div class="col-12 col-md-6 col-lg-3 project-new">
    <!-- <div class="col-md-8 project-list"> -->
      <h1>New project</h1>
      <%= simple_form_for @project do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :total_funding, label: 'Funding Goal' %>
        <%= f.input :category, collection: Project.categories %>
        <%= f.input :photo, as: :file %>
		    <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>

    <div class="col-12 col-md-2 col-lg-1">
    </div>

  </div>
</div>


